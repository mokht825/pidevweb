                });
                return false;

            }
            else if((loca.length<5)||((loca.length>255)))
            {
                swal({
                    title: 'Error!',
                    text: 'localisation:il faut que la localisation ne soit pas null e',
                    icon: 'error',
                    button: {
                        text: "Continue",
