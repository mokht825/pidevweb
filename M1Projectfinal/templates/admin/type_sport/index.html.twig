{% extends 'admin/baseBack.html.twig' %}


{% block title %}Diplome index{% endblock %}

{% block body %}
    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel">

                <a  class="btn btn-success btn-xs"  href="{{ path('type_sport_new') }}"><i class="fa fa-pencil"></i></a>
                <p>Ajouter un nouveaux Diplome</p>
            </div></div></div>
    <hr>

<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
    <table class="table table-striped table-advance table-hover" id="table_id">

        <h4><i class="fa fa-angle-right"></i> Diplome</h4>
        <hr>
        <thead>
            <tr>
                <th><i class="fa fa-flag-o"></i>Id</th>
                <th><i class="fa fa-bookmark"></i>Nom</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_sport in type_sports %}
            <tr>
                <td>{{ type_sport.id }}</td>
                <td>{{ type_sport.nom }}</td>
                <td>{{ type_sport.color }}</td>
                <td>
                    <a class="btn btn-success btn-xs" href="{{ path('type_sport_show', {'id': type_sport.id}) }}"><i class="fa fa-check"></i></a>
                    <a class="btn btn-primary btn-xs" href="{{ path('type_sport_edit', {'id': type_sport.id}) }}"><i class="fa fa-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    </div>
</div>

{% endblock %}
